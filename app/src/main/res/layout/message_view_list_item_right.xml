<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    style="@style/ListItem"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_layout_blue"
        android:padding="5dp"
        android:id="@+id/ll_message"
        >

        <TextView
            android:id="@+id/tv_messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/table_text_selector"
            android:text="This This This This ThisThisThisThisThisThisThisThisThisThisThisThisThis"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:id="@+id/ll_messageIndicator"
        android:layout_marginTop="10dp"
        android:background="@drawable/triangle_right"
       >

    </LinearLayout>



</LinearLayout>

