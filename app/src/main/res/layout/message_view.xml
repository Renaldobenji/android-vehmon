<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewMessages"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rlMessage"
        />

    <RelativeLayout
        android:id="@+id/rlMessage"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/button_background_enabled_end"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMessage"
            style="@style/SignInEditText"
            android:layout_toLeftOf="@+id/imageButtonMessageSubmit"
            android:layout_marginRight="5dp"
            android:inputType="textMultiLine"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/imageButtonMessageSubmit"
            android:background="@drawable/triangle_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


</RelativeLayout>